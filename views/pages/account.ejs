<% include ../partials/head %>
<main>
    <div class="container">
        <form align="center" action="/updateProfile" method="POST" style="margin: 80px 0px 50px 150px">
                <div class="form-group" style="width: 60%; margin: 10px 0 10px 20px">
                    <input class="form-control" value="<%= user.Name%>" name="name" type="text">
                </div>
                <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                    <input class="form-control" value="<%= user.EmailId%>" name="email" type="email">
                </div>
                <div class="form-group" style="width: 60%; margin: 10px 0 10px 20px">
                    <input class="form-control" placeholder="New Password" name="password" type="password">
                </div>
                <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                    <input class="form-control" placeholder="Re-enter Password" name="repassword" type="password" value="">
                </div>
            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                    <input type="text" name="lineone" placeholder="Address Line 1" class="form-control" value="<%= address[0]%>" required>

            </div>

            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                <input type="text" name="linetwo" placeholder="Address Line 2" class="form-control" value="<%= address[1]%>" required>
            </div>
            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                <input type="text" name="city" placeholder="City" class="form-control" value="<%= address[2]%>" required>
            </div>
            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                    <input type="text" name="state" placeholder="State" class="form-control" value="<%= address[3]%>" required>
                </div>

            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                <input type="text" name="postcode" placeholder="Post Code" class="form-control" value="<%= address[4]%>" required>
            </div>

            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                    <input type="text" name="country" placeholder="Country" class="form-control" value="<%= address[5]%>" required>
            </div>

            <div class="form-group" style="width: 60%; margin: 0 0 10px 20px">
                <input type="text" name="phone" placeholder="Phone" class="form-control" value=<%= (locals.user) ? user.Phone:''%> required>
            </div>

            <div class="checkbox">
                    <input type="checkbox" name="newsletter" <%= (user.IsSubscribed == 1) ? "checked": ""%> style="margin: 0 0 10px -250px"><label style="margin: 0px 0px 5px -250px">I would like to receive newsletter via email.</label>
                </div>
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Update" style="width: 60%; margin: 0 0 10px 20px">
            </form>
        </form>
    </div>
</main>

<% include ../partials/footer %>

